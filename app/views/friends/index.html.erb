<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>

<% if user_signed_in? %>
  <h1>Friend List</h1>

  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped align-middle text-center">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
        </tr>
      </thead>
      <tbody id="friends">
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <%= render friend %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to "New Friend", new_friend_path, class: "btn btn-info" %>
  </div>
<%else%>
  <h1>Hello World!</h1>
  This is my first Rails Webpage...
<%end %>